<!--index.wxml-->
<view style="padding-bottom: 100rpx">
  <view class="container">
    <text>欢迎</text>
  </view>

  <!--职位页面-->
  <view class="job">
    <view class="job-list">
      <!-- 职位和状态 -->
      <view class="padding-bottom15 job-list-row">
        <text class="job-title-name">好工作</text>
        <text class="job-title-ji index-position-ji-svg"></text>
        <text class="job-title-fire index-position-fire-svg"></text>
      </view>
      <!--薪资和佣金-->
      <view class="padding-bottom15 job-money">
        <view class="job-money-num">4500-5500</view>
        <!--<view class="position-money-award" wx:if="{{positions.awardStatu}}">-->
        <view class="job-money-award">
          <text>佣</text>
          <text>￥300</text>
        </view>
      </view>
      <!--地址和时间-->
      <view class="padding-bottom15 job-position">
        <view class="job-position-address">湖南省 | 长沙市 | 天心区</view>
        <view class="job-position-date">2019-05-11</view>
      </view>
      <!-- 福利 -->
      <view class="padding-bottom15 job-welfare">
        <!--<block wx:for="{{positions.welfare}}" wx:for-item="welfareItem" wx:for-index="idx" wx:key="idx">-->
        <text>社保</text>
        <!--</block>-->
      </view>
      <!-- 公司和招聘人数 -->
      <view class="padding8 job-company">
        <view class="job-company-name">xxx公司</view>
        <view class="job-company-peoples">招3人</view>
      </view>
    </view>
  </view>

  <relate-mobile show="true" height='30%' bindcancel="mobileCancel" bindconfirm='mobileConfirm'>
    <!--<view>你自己需要展示的内容1</view>-->
  </relate-mobile>
</view>